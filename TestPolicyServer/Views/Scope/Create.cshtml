@model PolicyServer1.Models.Scope

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<vc:flash-message-error />
<h2 class="text-xl font-semibold text-gray-800">Add Scope</h2>

<hr />
<div>
	<div class="m-5">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="mt-2 text-sm text-red-800"></div>
			<input type="hidden" asp-for="Id" />

			<div class="mb-5">
				<div class="mb-5">
					<label asp-for="Name" class="font-bold mb-1 text-gray-700 block text-xs"></label>
					<input asp-for="Name" class="w-full px-4 py-3 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" />
					<span asp-validation-for="Name" class="mt-2 text-sm text-red-800"></span>
				</div>
				<div class="mb-5">
					<label asp-for="DisplayName" class="font-bold mb-1 text-gray-700 block text-xs"></label>
					<input asp-for="DisplayName" class="w-full px-4 py-3 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" />
					<span asp-validation-for="DisplayName" class="mt-2 text-sm text-red-800"></span>
				</div>
				<div class="mb-5">
					<label asp-for="IconUri" class="font-bold mb-1 text-gray-700 block text-xs"></label>
					<input asp-for="IconUri" class="w-full px-4 py-3 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" />
					<span asp-validation-for="IconUri" class="mt-2 text-sm text-red-800"></span>
				</div>
			</div>
			<div class="flex justify-end">
				<a asp-action="Index" class="px-4 py-2 hover:text-white text-sm rounded-lg hover:bg-gray-800">Back to List</a>
				<input type="submit" value="Save" class="ml-2 px-4 py-2 bg-blue-500 text-white text-sm rounded-lg hover:bg-blue-800" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
