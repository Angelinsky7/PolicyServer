@model TestPolicyServer.Quickstart.Models.TimePolicyRangeViewModel

<div x-data="{open: @(Model.TimePolicyRange != null ? "true" : "false")}">
	<div class="mb-5 flex items-center">
		<label class="font-bold mb-1 mr-5 text-gray-700 block text-xs">@Model.Title</label>
		<div class="bg-white border-2 rounded border-gray-400 w-5 h-5 flex flex-shrink-0 justify-center items-center mr-2 focus-within:border-blue-500">
			<input type="checkbox" checked="@(Model.TimePolicyRange != null)" autocomplete="off" class=" opacity-0 absolute" x-on:input="open = !open">
			<svg class="fill-current hidden w-3 h-3 text-green-500 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z" /></svg>
		</div>
	</div>
	<template x-if="open">
		<div class="flex items-center w-full">
			<div class="mb-5 flex-auto mr-5">
				<label asp-for="TimePolicyRange.From" class="font-bold mb-1 text-gray-700 block text-xs"></label>
				<input name="@($"{Model.Title}.From")" value="@Model?.TimePolicyRange?.From" class="w-full px-4 py-3 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" />
				<span asp-validation-for="TimePolicyRange.From" class="mt-2 text-sm text-red-800"></span>
			</div>
			<div class="mb-5 flex-auto">
				<label asp-for="TimePolicyRange.To" class="font-bold mb-1 text-gray-700 block text-xs"></label>
				<input name="@($"{Model.Title}.To")" value="@Model?.TimePolicyRange?.To" class="w-full px-4 py-3 rounded-lg shadow-sm focus:outline-none focus:shadow-outline text-gray-600 font-medium" />
				<span asp-validation-for="TimePolicyRange.To" class="mt-2 text-sm text-red-800"></span>
			</div>
		</div>
	</template>
</div>