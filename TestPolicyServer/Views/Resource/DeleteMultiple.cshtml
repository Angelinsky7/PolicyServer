@model PolicyServer1.Models.Resource[]

@{
	ViewData["Title"] = "DeleteMultiple";
	Layout = ViewData["Layout"] as String ?? "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold">Delete</h2>


<h3>Are you sure you want to delete all those resources ?</h3>
<div class="mt-2">
	@if (String.IsNullOrEmpty(ViewData["Layout"] as String)) {
		<h4 class="font-semibold">Scopes</h4>
		<hr />
		@foreach (PolicyServer1.Models.Resource resource in Model) {
			<dl class="mt-2 flex flex-wrap">
				<dt class="font-semibold" style="flex: 0 120px;">
					@Html.DisplayNameFor(model => resource.Name)
				</dt>
				<dd style="flex: 0 calc(100% - 120px);">
					@Html.DisplayFor(model => resource.Name)
				</dd>
				<dt class="font-semibold" style="flex: 0 120px;">
					@Html.DisplayNameFor(model => resource.DisplayName)
				</dt>
				<dd style="flex: 0 calc(100% - 120px);">
					@Html.DisplayFor(model => resource.DisplayName)
				</dd>
				<dt class="font-semibold" style="flex: 0 120px;">
					@Html.DisplayNameFor(model => resource.Type)
				</dt>
				<dd style="flex: 0 calc(100% - 120px);">
					@Html.DisplayFor(model => resource.Type)
				</dd>

				Uris
				Scopes
				<dt class="font-semibold" style="flex: 0 120px;">
					@Html.DisplayNameFor(model => resource.IconUri)
				</dt>
				<dd style="flex: 0 calc(100% - 120px);">
					@Html.DisplayFor(model => resource.IconUri)
				</dd>
			</dl>
		}
	} else {
		<h4 class="font-semibold">@Model.Count() Scopes to delete.</h4>
	}

	<view-layout-modal class="mt-4 mr-4 justify-end" layout="@ViewData["Layout"]">
		<form asp-action="DeleteMultiple" id="modalButton">
			@foreach (PolicyServer1.Models.Resource resource in Model) {
				<input type="hidden" id="guid" name="guid" value="@resource.Id" />
			}
			<a asp-action="Index" class="px-4 py-2 hover:text-white text-sm rounded-lg hover:bg-gray-800">Back to List</a>
			<input type="submit" value="DeleteMultiple" class="ml-2 bg-red-500 rounded-lg text-white px-4 py-2 cursor-pointer hover:bg-red-600" />
		</form>
	</view-layout-modal>

</div>
